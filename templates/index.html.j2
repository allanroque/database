<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <title>PG Health — {{ report.host if report is defined else '' }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="styles.css?v=1" />
  <script defer src="app.js"></script>
</head>
<body>
  <header class="topbar">
    <div class="brand">PG Health</div>
    <div class="meta">
      <span id="host">—</span>
      <span class="dot"></span>
      <span id="collected">—</span>
    </div>
  </header>

  <main class="wrap">
    <!-- CORE (SO) -->
    <section class="card">
      <div class="card__head">
        <h3>Core</h3>
        <div class="badge" id="core-status">SO</div>
      </div>
      <div class="grid-2">
        <table class="kv">
          <tbody id="os-kv">
            <!-- preenchido via JS -->
          </tbody>
        </table>
        <table class="kv">
          <tbody id="os-extra">
            <!-- mounts e afins -->
          </tbody>
        </table>
      </div>
    </section>

    <!-- DATABASE (substitui “Hardware/Drives”) -->
    <section class="card">
      <div class="card__head">
        <h3>Database</h3>
        <div class="badge accent">PostgreSQL</div>
      </div>
      <div class="grid-2">
        <table class="kv">
          <tbody id="db-basics">
            <!-- versão, listen, porta, confs -->
          </tbody>
        </table>
        <table class="kv">
          <tbody id="db-activity">
            <!-- conexões, estados, etc -->
          </tbody>
        </table>
      </div>
    </section>

    <!-- TAMANHOS POR DB -->
    <section class="card">
      <div class="card__head">
        <h3>Tamanho por DB</h3>
        <div class="badge">Storage</div>
      </div>
      <pre id="db-sizes" class="codeblock">carregando…</pre>
    </section>

    <!-- WAL / CHECKPOINTS -->
    <section class="card">
      <div class="card__head">
        <h3>WAL & Checkpoints</h3>
        <div class="badge">WAL</div>
      </div>
      <pre id="wal-info" class="codeblock">carregando…</pre>
    </section>

    <!-- LOGS RECENTES -->
    <section class="card">
      <div class="card__head">
        <h3>Erros recentes (log)</h3>
        <div class="badge warn">Logs</div>
      </div>
      <pre id="db-logs" class="codeblock">carregando…</pre>
    </section>

    <!-- JSON BRUTO -->
    <section class="card">
      <div class="card__head">
        <h3>JSON cru</h3>
        <a class="link" href="health.json" target="_blank" rel="noreferrer">/pg-health/health.json</a>
      </div>
      <pre id="raw-json" class="codeblock small">carregando…</pre>
    </section>
  </main>

  <footer class="foot">
    <span>Gerado por Ansible • Página local</span>
  </footer>
</body>
</html>
